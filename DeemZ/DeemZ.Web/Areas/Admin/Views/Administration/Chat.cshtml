@{
    this.ViewBag.Title = "Admin Chat";
    Layout = "_AdminPanelLayout";
}

<h1 class="text-center text-white">@this.ViewBag.Title  <i class="far fa-comments"></i></h1>

<div class="container">
    <form class="wide-form">
        <div id="message-holder" class="mt-3 d-flex justify-content-start">
            <input class=" col-sm-10 col-md-10 form-control" style="height: 50px" type="text" id="messageInput" placeholder="Message..." />
            <button id="sendButton" class="col-sm-2 col-md-2 btn btn-success btn-lg">Send</button>
            <input id="groupId" type="hidden" value="@ViewBag.GroupId" />
        </div>
    </form>

    <hr style="height: 5px;" class="bg-gray-600" />
    <div id="messagesList" style="font-size: 28px;">
    </div>
</div>

@section Scripts {
    <script src="~/js/chat.js"></script>
}