@model IEnumerable<DeemZ.Models.ViewModels.Surveys.DetailsSurveyViewModel>
@{
    Layout = DeemZ.Global.WebConstants.Constant.LayOut.AdminLayout;
    ViewData["Title"] = "Surveys";
}

<div class="container-fluid">
    <div class="text-center mt-5">
        <a asp-area="Survey" asp-controller="Survey" asp-action="Add" asp-route-courseId="@ViewBag.CourseId" class="btn btn-success">Add Survey</a>
    </div>
    <table class="table table-striped table-dark mt-4">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Is Public</th>
                <th scope="col">Start Date</th>
                <th scope="col">End Date</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var survey in Model)
            {
                <tr>
                    <td><a class="text-light" asp-area="" asp-action="ViewCourse" asp-controller="Course" asp-route-courseId="@survey.Id">@survey.Name</a></td>
                    <td>@survey.IsPublic</td>
                    <td>@survey.StartDate.ToLocalTime().ToString(DeemZ.Global.WebConstants.Constant.DateTimeFormat)</td>
                    <td>@survey.EndDate.ToLocalTime().ToString(DeemZ.Global.WebConstants.Constant.DateTimeFormat)</td>
                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-area="Survey" asp-controller="Survey" asp-action="Edit" asp-route-surveyId="@survey.Id">Edit</a>
                                <a class="dropdown-item" asp-area="Survey" asp-controller="Survey" asp-action="Questions" asp-route-surveyId="@survey.Id">Questions</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" asp-area="Survey" asp-controller="Survey" asp-action="Delete" asp-route-surveyId="@survey.Id">Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>