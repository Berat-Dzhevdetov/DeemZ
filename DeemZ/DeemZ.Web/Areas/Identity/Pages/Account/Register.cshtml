@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign up";
}

<div class="form gray-background mt-4 round-bottom">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div class="image-holder">
            <img src="~/media/sign-up-background.jpg" />
            <div>
                <h1>@ViewData["Title"]</h1>
            </div>
        </div>
        <div class="p-3">
            <div class="form-group">
                <div class="inner-addon">
                    <input asp-for="Input.Username" placeholder="Username" type="text">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="inner-addon">
                    <input asp-for="Input.Email" placeholder="Email" type="email">
                    <i class="fa fa-envelope fa-envelope-custom" aria-hidden="true"></i>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="inner-addon">
                    <input asp-for="Input.Password" placeholder="Password" type="password">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="inner-addon">
                    <input asp-for="Input.ConfirmPassword" placeholder="Confirm password" type="password">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div asp-validation-summary="All" class="text-danger"></div>
            <ul class="no-bullets">
                <li>
                    <input type="checkbox" asp-for="Input.PrivacyConfirm" />
                    I accept the <a asp-controller="Home" asp-action="Privacy">terms and conditions</a> of DeemZ<br />
                    <span asp-validation-for="Input.PrivacyConfirm" class="text-danger"></span>
                </li>
            </ul>
            <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
