@{
    ViewData["Title"] = "Home";
}
@model IndexUserViewModel

<div class="logged-user-index">
    <div class="cards">
        <div class="card-holder">
            <div class="card-header capitalize">Мy courses</div>
            <div class="card-info">
                <ul>
                    @if (Model.Courses.Any())
                    {
                        @foreach (var course in Model.Courses)
                        {
                            <li class="info-item">
                                <a asp-action="ViewCourse" asp-controller="Course" asp-route-courseId="@course.Id">
                                    @course.Name
                                    <span class="arrow-right">
                                        <i class="fas fa-play"></i>
                                    </span>
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="info-item">
                            You currently have no courses enrolled
                        </li>
                    }
                </ul>
            </div>
            <div class="card-links credits regal-blue">
                Total points: @Model.Credits
            </div>
        </div>
        <div class="card-holder">
            <div class="card-header capitalize">My Surveys</div>
            <div class="card-info">
                <ul>
                    @if (Model.Surveys.Any())
                    {
                        @foreach (var survey in Model.Surveys)
                        {
                            <li class="info-item">
                                <a asp-action="Take" asp-controller="Survey" asp-route-surveyId="@survey.Id">
                                    @survey.Name
                                </a>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="info-item">
                            There are no available surveys at the moment
                        </li>
                    }
                </ul>
            </div>
            <div class="card-links">
                <a href="#" class="primary-btn base-btn mb-2">All surveys</a>
            </div>
        </div>
        <div class="card-holder">
            <div class="card-header capitalize">Мy Resources</div>
            <div class="card-info">
                <ul>
                    <li>
                        <a href="~/media/logo.png">logo</a>
                    </li>
                </ul>
            </div>
            <div class="card-links">
                <a href="#" class="primary-btn base-btn mb-2">All resources</a>
            </div>
        </div>
    </div>
</div>