@{
    Layout = DeemZ.Global.WebConstants.Constant.LayOut.AdminLayout;
    ViewData["Title"] = "Edit Question";
}
@model DeemZ.Models.FormModels.Exam.AddQuestionFormModel

<div class="container-fluid">
    <form method="post" class="mt-4">
        <div class="form-group text-center">
            <h2 class="text-light">@ViewData["Title"]</h2>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="Text"></label>
            <input class="form-control" asp-for="Text" />
            <span asp-validation-for="Text" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="Points"></label>
            <input class="form-control" asp-for="Points" />
            <span asp-validation-for="Points" class="small text-danger"></span>
        </div>
        @for (int i = 0; i < Model.Answers.Count; i++)
        {
            <div class="form-group">
                <label class="text-light" asp-for="Answers[i].Text"></label>
                <input asp-for="Answers[i].IsCorrect" />
                <input class="form-control" asp-for="Answers[i].Text" />
            </div>
        }
        <span asp-validation-for="Answers" class="small text-danger"></span>
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary" value="@ViewData["Title"]" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}