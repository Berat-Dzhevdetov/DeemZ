@{
    Layout = "_AdminPanelLayOut";
    ViewData["Title"] = "Edit User";
}
@model DeemZ.Models.FormModels.User.EditUserFormModel

<div class="container-fluid">
    <form method="post" class="mt-4">
        <div class="form-group text-center">
            <h2 class="text-light">@ViewData["Title"]</h2>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="UserName"></label>
            <input placeholder="@Model.UserName" class="form-control" asp-for="UserName" />
            <span asp-validation-for="UserName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="FirstName"></label>
            <input placeholder="@Model.FirstName" class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="LastName"></label>
            <input placeholder="@Model.LastName" class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="Email"></label>
            <input placeholder="@Model.Email" class="form-control" asp-for="Email" />
            <span asp-validation-for="Email" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="PhoneNumber"></label>
            <input placeholder="@Model.PhoneNumber" class="form-control" asp-for="PhoneNumber" />
            <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <label class="text-light" asp-for="LockoutEndDateUtc"></label>
            <input class="form-control" asp-for="LockoutEndDateUtc" />
            <span asp-validation-for="LockoutEndDateUtc" class="small text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="EmailConfirmed" />
            <label class="text-light" asp-for="EmailConfirmed"></label>
        </div>
        <div class="form-group">
            <input asp-for="IsAdmin" />
            <label class="text-light" asp-for="IsAdmin"></label>
        </div>
        <div class="form-group text-center">
            <input type="submit" class="btn btn-primary" value="@ViewData["Title"]" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}